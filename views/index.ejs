    <script>
        function toggleSchemes(id) {
            const element = document.getElementById(`schemes-${id}`);
            const isCollapsed = element.classList.contains('h-0');
            if (isCollapsed) {
                element.classList.remove('h-0');
                element.classList.add('h-auto');
            } else {
                element.classList.remove('h-auto');
                element.classList.add('h-0');
            }
        }

        function toggleSchemes(dept) {
            const schemes = document.getElementById(`schemes-${dept}`);
            const icon = document.getElementById(`icon-${dept}`);
            if (schemes.classList.contains('max-h-0')) {
                schemes.classList.remove('max-h-0');
                schemes.classList.add('max-h-96'); // Adjust max-height based on content
                icon.classList.add('rotate-180');
            } else {
                schemes.classList.remove('max-h-96');
                schemes.classList.add('max-h-0');
                icon.classList.remove('rotate-180');
            }
        }

        
    </script>

